<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andre.jbookingmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".RegistroActivity" />
        <activity
            android:name=".Registro2Activity"
            android:parentActivityName=".RegistroActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegistroActivity" />
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Registro4Activity" />
        <activity android:name=".Registro3Activity" />
        <activity android:name=".AlojamientoDetalleActivity" />
        <activity android:name=".CalendarioAlojamientoActivity" />
        <activity android:name=".FiltroFechaActivity" android:noHistory="true"/>
        <activity android:name=".AlojamientosFiltroFechaActivity"></activity>
    </application>

</manifest>