<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF3366"
    tools:context=".Login">

    <TextView
        android:id="@+id/usuariotextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/usuarioedtext"
        android:layout_marginTop="200dp"
        android:text="USUARIO"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usuarioedtext"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:background="#FCB4AA"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/clavetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/usuariotextview"
        android:layout_marginBottom="200dp"
        android:text="CLAVE"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        tools:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/claveedittext"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/usuariotextview"
        android:layout_marginBottom="140dp"
        android:background="#FCB4AA"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/butlogin"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/usuariotextview"
        android:layout_marginBottom="49dp"
        android:background="@android:color/background_light"
        android:text="LOGIN"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/butregistro"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/butlogin"
        android:layout_marginEnd="41dp"
        android:background="@android:color/background_light"
        android:text="REGISTRO"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>