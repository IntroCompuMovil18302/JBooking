<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewIAlojamientoAdaptador"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <TextView
        android:id="@+id/textViewAlojaminetoAdapterUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" Bogota"
        android:textColor="@color/colorUbicacion"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAlojaminetoAdapterNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" Aparta estudio"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAlojaminetoAdapterPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" COP 255" />
</LinearLayout>